<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calc_three_num"
    android:background="@color/back_color_blue">

    <TextView
        android:id="@+id/text_calcul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Калькулятор"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        />
    <LinearLayout
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_below="@+id/text_calcul">
        <View
            android:background="@drawable/rounded_login_ui"
            android:backgroundTint="#7E7E7E"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="10dp"
             />
        <TextView
            android:id="@+id/result_calcul"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:paddingVertical="10dp"
            android:paddingRight="15dp"
            android:gravity="right"
            android:text=""
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/kube_text"/>
        <EditText
            android:id="@+id/first_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:inputType="numberSigned|number|numberDecimal"
            android:hint="Первое вычитаемое"
            android:textSize="30sp"/>
        <EditText
            android:textStyle="bold"
            android:id="@+id/second_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:inputType="numberSigned|number|numberDecimal"
            android:hint="Второе вычитаемое"
            android:textSize="30sp"/>
        <EditText
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/three_num"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="numberSigned|number|numberDecimal"
            android:hint="Третье вычитаемое"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/btn_calc"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:text="Посчитать"
            android:textAllCaps="true"
            android:backgroundTint="@color/burus"
            android:backgroundTintMode="src_over"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical"-->
<!--            android:layout_weight="1">-->
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="10" />-->

<!--        </LinearLayout>-->
    </LinearLayout>
    <Button
        android:layout_above="@id/calculator"
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/my_red"
        android:backgroundTintMode="src_over"
        android:layout_marginBottom="20dp"
        android:text="@string/exit"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
